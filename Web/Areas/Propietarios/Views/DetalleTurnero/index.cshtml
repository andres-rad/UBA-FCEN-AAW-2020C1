@using Aplicacion.UseCases.Propietario
@model DetalleTurneroResponse
@{
    ViewData["Area"] = "Propietarios";
}
<main>
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-12 col-md-6">
                <div class="row">
                    <div class="col-12">
                        <div class="h1">
                            @Model.Concepto
                        </div>
                    </div>
                    <div class="col-12">
                        <div class="h3">
                            @Model.Ciudad
                        </div>
                    </div>
                    <div class="col-12">
                        <div class="h4">
                            @Model.Calle @Model.Numero
                        </div>
                    </div>
                    <div class="col-12">
                        <div class="h3">
                            Capacidad máxima:
                            @* Esta logica va al controller, que pasa por el VM el valor ya producido *@
                            <span class="h5">@(Model.CantidadMaxima == int.MaxValue ? "Sin límite" : Model.CantidadMaxima.ToString())</span>
                        </div>
                    </div>
                    <hr class="w-100" />
                    <div class="col-8 offset-2">
                        <div class="row">
                            <div class="col-12 h4 text-center">
                                QR para otorgar turnos
                            </div>
                        </div>
                        <div class="col-12">
                            <img class="img-fluid" src="data:image/jpeg;base64, @Model.Qr" alt="Codigo QR" />
                        </div>
                    </div>
                </div>
                <div class="col-12">
                    @Html.ActionLink(
                        "Editar",
                        "Index",
                        "EditarTurnero",
                        new
                        {
                            idTurnero = @Model.Id
                        },
                        new { @class = "btn btn-default btn-primary" }
                     )
                </div>
            </div>
            <div class="col-sm-12 col-md-6">
                @if (Model.CantidadEnEspera == 0)

                {
                    <div class="row">
                        <p>No hay turnos en espera</p>
                    </div>
                }
                else
                {
                    <div class="row">
                        <div class="col-12">
                            <div class="h1 text-center">
                                Siguiente turno: @Model.SiguienteTurno_Numero
                            </div>
                        </div>
                        <div class="col-8 offset-2 justify-content-center align-items-center">

                            <div class="row">
                                <div class="col-12">
                                    <form id="qr_form" asp-action="ProcesarQR" method="post">
                                        <div class="row justify-content-center">
                                            <div id="reader"></div>
                                        </div>
                                        <div>
                                            <input class="text-center" type="text" id="qrdata" name="data" hidden />
                                        </div>
                                    </form>
                                </div>
                                <div class="col-12">
                                    <div class="btn-toolbar justify-content-around align-items-center" role="toolbar" aria-label="Toolbar with button groups">
                                        @Html.ActionLink(
                                            "Demorar turno",
                                            "DemorarTurno",
                                            "DetalleTurnero",
                                            new
                                            {
                                                idTurnero = @Model.Id
                                            },
                                            new { @class = "btn btn-warning" }
                                            )
                                        @Html.ActionLink(
                                            "Cancelar turno",
                                            "CancelarTurno",
                                            "DetalleTurnero",
                                            new
                                            {
                                                idTurno = @Model.SiguienteTurno_Id,
                                                idTurnero = @Model.Id,

                                            },
                                            new { @class = "btn btn-danger" }
                                            )
                                    </div>
                                </div>
                            </div>

                            <script src="@Url.Content("~/Scripts/qrReader.js")" type="text/javascript"></script>

                        </div>
                    </div>
                }
            </div>

        </div>
</main>

<script src="@Url.Content("~/Scripts/product.validation.js")" type="text/javascript"></script>
