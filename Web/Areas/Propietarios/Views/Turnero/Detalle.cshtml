@using Aplicacion.UseCases.Propietario
@model DetalleTurneroResponse
@{
    ViewData["Area"] = "Propietarios";
}
<main>
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-12 col-md-6">
                <div class="row">
                    <div class="col-12">
                        <div class="h1">
                            @Model.Concepto
                        </div>
                    </div>
                    <div class="col-12">
                        <div class="h4">
                            @Model.Ciudad
                        </div>
                    </div>
                    <div class="col-12">
                        <div class="h4">
                            @Model.Calle @Model.Numero
                        </div>
                    </div>
                    <div class="col-12">
                        <div class="h4">
                            Turnos en espera: <span class="badge badge-info">@(Model.CantidadEnEspera)</span>
                        </div>
                    </div>
                    <div class="col-12">
                        <div class="h4">
                            Limite: <span class="badge badge-warning">@(Model.CantidadMaxima == int.MaxValue ? "Sin límite" : Model.CantidadMaxima.ToString())</span>
                        </div>
                    </div>
                    <hr class="w-100" />
                    <div class="col-8 offset-2">
                        <div class="row">
                            <div class="col-12 h4 text-center">
                                QR para otorgar turnos
                            </div>
                        </div>
                        <div class="col-12">
                            <img class="img-fluid" src="data:image/jpeg;base64, @Model.Qr" alt="Codigo QR" />
                        </div>
                    </div>
                </div>
                <div class="col-12">
                    @Html.ActionLink(
                        "Editar",
                        "Index",
                        "EditarTurnero",
                        new
                        {
                            idTurnero = @Model.Id
                        },
                        new { @class = "btn btn-default btn-primary" }
                     )
                </div>
            </div>
            <div class="col-sm-12 col-md-6">
                <div class="jumbotron d-flex flex-column justify-content-between " style="width:100%; height:100%">

                    @if (Model.CantidadEnEspera == 0)

                    {
                        <h1>No hay turnos en espera</h1>
                    }
                    else
                    {
                        <h1 class="h1 text-center ">
                            Siguiente turno: @Model.SiguienteTurno_Numero
                        </h1>
                        <form id="qr_form" asp-action="ProcesarQR" method="post">
                                <div id="reader"></div>
                                <input class="text-center" type="text" id="qrdata" name="data" hidden />
                        </form>
                        <div class="btn-toolbar justify-content-around align-items-center" role="toolbar" aria-label="Toolbar with button groups">
                            @Html.ActionLink(
                                "Saltar turno",
                                "CancelarTurno",
                                "DetalleTurnero",
                                new
                                {
                                    idTurno = @Model.SiguienteTurno_Id,
                                    idTurnero = @Model.Id,

                                },
                                new { @class = "btn btn-danger" }
                                )
                        </div>

                        <script src="@Url.Content("~/Scripts/qrReader.js")" type="text/javascript"></script>
                    }
                </div>
            </div>

        </div>
</main>

<script src="@Url.Content("~/Scripts/product.validation.js")" type="text/javascript"></script>
