@using Aplicacion.UseCases.Propietario
@model List<ListarTurnerosDTO>
@{
    ViewData["Area"] = "Propietarios";
}

<main>
    <div class="row">
        <div style=" display: flex; align-items: center; justify-content: space-between; width: 100%;">
            <h1>
                Mis Turneros

            </h1>
            <a role="button" class="btn btn-primary" asp-area="Propietarios" asp-controller="Turnero" asp-action="Crear">Nuevo Turnero</a>
        </div>
        <div class="col-12 text-center" style="margin-top: 10px; width: 100%">
            @if (@Model.Count == 0)
            {
                <div class="jumbotron">
                    <h1>Aún no creo ningún turnero</h1>
                </div>
            }
            else
            {
                <table class="table  " style="margin-left: auto;margin-right: auto ; ">
                    <thead>
                        <tr>
                            <th scope="col">Nombre</th>
                            <th scope="col">Direccion</th>
                            <th scope="col" class="text-center">Gente en espera</th>
                            <th scope="col" colspan="2"></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var turnero in Model)
                        {
                            <tr>
                                <td class="align-middle">
                                    @Html.ActionLink(
                                        @turnero.Concepto,
                                        "Detalle",
                                        "Turnero",
                                        new
                                        {
                                            idTurnero = turnero.Id
                                        },
                                        new { role = "button", @class = "btn btn-light", style = "min-width:80%;font-size: x-large" }

                                    )

                                </td>
                                <td class="align-middle"> @turnero.Calle @turnero.Numero, @turnero.Ciudad</td>
                                <td class="align-middle text-center"> @turnero.CantidadEnEspera</td>
                                <td class="align-middle">

                                    @Html.ActionLink(
                                        "Editar",
                                        "Editar",
                                        "Turnero",
                                        new
                                        {
                                            idTurnero = turnero.Id
                                        },
                                        null
                                    )
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
        </div>
    </div>
</main>
